/* pages/start/start.wxss */

.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  height: 100vh;
}

.loading {
  text-align: center;
  margin-top: 20rpx;
}

.description-section {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}

.description-label {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 20rpx;
  color: #333;
}

.description {
  font-size: 28rpx;
  margin-bottom: 50rpx;
  color: #666;
}

.start-button-navigator {
  display: flex;
  justify-content: center;
}

.start-button {
  background-color: #4CAF50;
  color: #fff;
  padding: 20rpx 0;
  border-radius: 10rpx;
  font-size: 36rpx;
  font-weight: bold;
  text-align: center;
  width: 80%; /* 设置按钮宽度为父容器的80% */
  box-shadow: 0 4rpx 6rpx rgba(0, 0, 0, 0.1);
  transition: background-color 0.3s, transform 0.3s;
}

.start-button:hover {
  background-color: #45a049;
  transform: scale(1.05);
}
